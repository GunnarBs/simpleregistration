<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>System - Simple Registration Redirect</name>
	<author>The Krotek</author>
	<creationDate>November 2013</creationDate>
	<copyright>GNU/GPLv2</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>support@thekrotek.com</authorEmail>
	<authorUrl>thekrotek.com</authorUrl>
	<version>1.0</version>
    <description>This plugin will redirect registration requests from standard Joomla component to Simple Registration.</description>	
	<files>
		<file plugin="simpleredirect">simpleredirect.php</file>		
	</files>	
	<languages>
		<language tag="en-GB">languages/en-GB.plg_system_simpleredirect.sys.ini</language>
		<language tag="ru-RU">languages/ru-RU.plg_system_simpleredirect.sys.ini</language>
	</languages>	
	<config>
		<fields name="params" >
			<fieldset name="basic">
				<field name="override" type="radio" default="1" class="btn-group" label="PLG_SIMPLE_REDIRECT_OVERRIDE" description="PLG_SIMPLE_REDIRECT_OVERRIDE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>	
</extension>