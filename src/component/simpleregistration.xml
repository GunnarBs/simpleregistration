<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
	<name>Simple Registration</name>
	<version>3.1.0</version>
	<creationDate>2014-01-26</creationDate>
	<author>GiBiLogic</author>
	<authorEmail>info@gibilogic.com</authorEmail>
	<authorUrl>http://www.gibilogic.com</authorUrl>
	<copyright>Copyright (C) 2011-2014 GiBiLogic. All rights reserved</copyright>
	<license>GNU/GPL v3 or later</license>
	<description><![CDATA[
		<img src='http://extensions.gibilogic.com/images/gibilogicextensions-150x150.png' alt='' style='float: left;margin: 0 10px 10px 0' />
		<h1>GiBi Simpleregistration</h1>
		<h2>A Joomla extension by <a href="http://www.gibilogic.com">GiBiLogic</a></h2>
		<p>This component allows user to register by inserting only an e-mail address: it will be used both as "Full name" and "Username"; password will be created randomly and sent to the user.</p>
		<p>To use this component, just create a menu item which links to Simple Registration -> Registration Form.</p>
		<p>Discover other extension by <strong>GiBiLogic</strong> at <a href="http://extensions.gibilogic.com">extensions.gibilogic.com</a></p>
	]]></description>
	<administration>
		<menu link="option=com_simpleregistration">com_simpleregistration</menu>
		<files folder="backend">
			<filename>simpleregistration.php</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<folder>views</folder>
		</files>
		<languages folder="language/backend">
			<language tag="de-DE">de-DE.com_simpleregistration.ini</language>
			<language tag="de-DE">de-DE.com_simpleregistration.sys.ini</language>
			<language tag="en-GB">en-GB.com_simpleregistration.ini</language>
			<language tag="en-GB">en-GB.com_simpleregistration.sys.ini</language>
			<language tag="it-IT">it-IT.com_simpleregistration.ini</language>
			<language tag="it-IT">it-IT.com_simpleregistration.sys.ini</language>
			<language tag="ru-RU">ru-RU.com_simpleregistration.ini</language>
			<language tag="ru-RU">ru-RU.com_simpleregistration.sys.ini</language>
		</languages>
	</administration>
	<files folder="frontend">
		<filename>simpleregistration.php</filename>
		<filename>controller.php</filename>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	<languages folder="language/frontend">
		<language tag="de-DE">de-DE.com_simpleregistration.ini</language>
		<language tag="en-GB">en-GB.com_simpleregistration.ini</language>
		<language tag="it-IT">it-IT.com_simpleregistration.ini</language>
		<language tag="ru-RU">ru-RU.com_simpleregistration.ini</language>
    </languages>
</extension>
